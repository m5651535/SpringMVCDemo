<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.example.controllers" />
    <bean id="protoTypeScopeBean" class="com.example.Beans.ScopeBean" scope="prototype"/>
    <bean id="singleTonScopeBean" class="com.example.Beans.ScopeBean" scope="singleton"/>
    <bean id="requestScopeBean" class="com.example.Beans.ScopeBean" scope="request"/>
    <bean id="sessionScopeBean" class="com.example.Beans.ScopeBean" scope="session"/>
</beans>